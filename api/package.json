{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "type-check": "tsc --noEmit",
    "format": "prettier --write src",
    "lint": "tsc --noEmit && eslint --ext .tsx,.ts,.js src",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "graphql:codegen:watch": "nodemon --exec \"yarn graphql:codegen\" --ext .graphql --delay 5",
    "start": "nodemon --exec \"ts-node src/index.ts\" --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@graphql-codegen/cli": "1.21.7",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.23.0",
    "@graphql-codegen/typescript-document-nodes": "1.17.16",
    "@graphql-codegen/typescript-operations": "1.18.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.1",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "graphql-codegen": "^0.4.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "apollo-server-express": "^2.25.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "node-json-db": "^1.3.0"
  }
}