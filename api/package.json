{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "type-check": "tsc --noEmit",
    "format": "prettier --write src",
    "lint": "tsc --noEmit && eslint --ext .tsx,.ts,.js src",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "graphql:codegen:watch": "nodemon --exec \"yarn graphql:codegen\" --watch src/schema/* --delay 5",
    "dev": "nodemon --exec \"yarn start\" --ext .ts",
    "start": "nodemon --exec \"ts-node -r tsconfig-paths/register src/index.ts\" --ext .ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.7",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.23.0",
    "@graphql-codegen/typescript-document-nodes": "1.17.16",
    "@graphql-codegen/typescript-operations": "1.18.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.1",
    "node-json-db": "^1.3.0"
  }
}
